<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lavender">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/recyclerview_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

        <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal|top">

            <com.example.wangjun.mytestdemo.utils.BannerLayout
                android:id="@+id/banner_main"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:autoPlayDuration="5000"
                app:defaultImage="@drawable/load_banner_erro"
                app:indicatorMargin="10dp"
                app:indicatorPosition="centerBottom"
                app:indicatorShape="oval"
                app:indicatorSpace="2dp"
                app:scrollDuration="1100"
                app:selectedIndicatorColor="#585454"
                app:selectedIndicatorHeight="6dp"
                app:selectedIndicatorWidth="6dp"
                app:unSelectedIndicatorColor="#00bb9c"
                app:unSelectedIndicatorHeight="6dp"
                app:unSelectedIndicatorWidth="6dp"
                />

        </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>


    </FrameLayout>
</RelativeLayout>